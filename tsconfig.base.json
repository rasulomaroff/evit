{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "bundler",
        "lib": [
            "esnext",
            "dom"
        ],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "verbatimModuleSyntax": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "noEmit": true,
        "allowJs": false,
        "resolveJsonModule": true
    },
    "exclude": ["node_modules", "dist"]
}
